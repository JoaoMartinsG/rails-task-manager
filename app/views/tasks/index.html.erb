<h1>My tasks</h1>

<div>
  <% @tasks.each do |task| %>
    <p>
    <% if task.completed == false %>
      <input type="checkbox" name="tasks" >
      <label for="tasks">
      <%= link_to task.title, task_path(task) %>
      <%= link_to '☠', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </label>
    <% else %>
      <input type="checkbox" name="tasks" checked>
      <label for="tasks">
      <%= link_to task.title, task_path(task) %>
      <%= link_to '☠', task_path(task), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
      </label>
    <% end %>
    </p>
  <% end %>
</div>

<p><%= link_to '+ Add a new task', new_task_path(:id) %></p>

<div class="navbar">
  <h2><%= @task.title %></h2>
  <%= link_to 'Edit this task', edit_task_path %>
</div>

<p><%= @task.details %></p>

<% if @task.completed == false %>
  <input type="checkbox" name="tasks" >
  <label for="tasks">This task has not been completed yet</label>
  <% else %>
  <input type="checkbox" name="tasks" checked>
  <label for="tasks">This task is completed</label>
<% end %>

<p><%= link_to 'Back to list', tasks_path %></p>
